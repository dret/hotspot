<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns="http://dret.net/xmlns/hotspot/1">
	
	<!-- CSS document -->
	<css document="w3c-blue.css"/>
	
	<!-- the w3c-blue layout is based on the slidy layout; therefore, we include the slidy theme -->
	<import layout="slidy"/>
	
	<!-- cover layout -->
	<cover>
		<img id="logo" src="w3c-blue/keys.jpg" alt="Cover page images (keys)" class="cover" />
		<h1><title level="presentation"/></h1>
		<h3><title level="hotspot"/></h3>
	</cover>
	
	<!-- default slide layout -->
	<class>
		<img alt="" id="head-icon" src="w3c-blue/icon-blue.png" />
		<object id="head-logo"
				data="w3c-blue/w3c-logo-blue.svg" type="image/svg+xml" title="W3C logo">
			<a href="http://www.w3.org/">
				<img alt="W3C logo" id="head-logo-fallback" src="w3c-blue/w3c-logo-blue.gif" />
			</a>
		</object>
	</class>

	<!-- slide layout slanty -->
	<class id="slanty">
		<img id="top-right" src="w3c-blue/w3c-logo-slanted.jpg" alt="slanted W3C logo" />
	</class>
	
	<!-- slide template -->
	<slide>
		<div class="printheader only-media-print">
			<span class="part"><title level="part"/></span>
			<span class="author"><author form="short"/>: </span>
			<span class="presentation"><title level="presentation"/></span> 
		</div>
		<h1><span class="only-media-print printslidenum">(<slidenum/>)</span> <title/></h1>
		<contents/>
		<br/>
		<br/>
	</slide>
	
	<!-- presentation template -->
	<presentation>
		<cover/>
		<div class="printtoc only-media-print">
			<div class="printheader only-media-print">
				<span class="part">Contents</span>
				<span class="author"><author form="short"/>: </span>
				<span class="presentation"><title level="presentation"/></span> 
			</div>
			<h1>Contents</h1>
			<static-toc/>
		</div>
		<contents/>
		<div class="printfooter only-media-print">
			<span class="date"><date/></span>
			<span class="course"><title level="hotspot"/></span>
		</div>
	</presentation>
	
</layout>