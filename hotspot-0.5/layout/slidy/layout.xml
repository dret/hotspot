<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns="http://dret.net/xmlns/hotspot/1">
	
	<css document="slidy.css"/>
	
	<configuration>
		<misc append-linebreak="yes"/>
		<kilauea xmlns="http://xmlns.sharpeleven.net/kilauea">
			<settings showToolbar="true" coupleFooter="true" stackBackgrounds="true"/>
		</kilauea>
	</configuration>
	
	<!-- Titlepage  (for compatibility, we still use the @class="titlepage" style in addition to kilauea's @class="cover") -->
	<cover class="titlepage">
		<h1><title level="presentation"/></h1>
		<h3><title level="hotspot"/></h3>
	</cover>
		
</layout>
