<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns="http://dret.net/xmlns/hotspot/1">
	
	<!-- CSS document -->
	<css document="zurich.css"/>
	
	<!-- style of the title slide -->
	<cover>
		<h1><title/></h1>
		<h3><title level="hotspot"/></h3>
		<for-each-author>
			<h5><author/>, <affiliation/></h5>
		</for-each-author>
		<h5><date/></h5>
	</cover>
	
	<!-- background class for the cover slide -->
	<class id="cover">
		<img src="zurich.jpg" alt="View of Zurich, Switzerland"/>
	</class>
	
</layout>