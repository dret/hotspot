<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns="http://dret.net/xmlns/hotspot/1">
	
	<!-- CSS document -->
	<css document="malmoe.css"/>
	
	<!-- the malmoe theme requires the kilauea plugin 'splitheader' -->
	<configuration>
		<link author="http://sharpeleven.net/"/>
		<kilauea xmlns="http://xmlns.sharpeleven.net/kilauea">
			<plugins>
				<splitheader/>
			</plugins>
		</kilauea>
	</configuration>
	
	<!-- style of the title slide -->
	<cover>
		<h1><title/></h1>
		<h3><title level="hotspot"/></h3>
		<for-each-author>
			<h5><author/>, <affiliation/></h5>
		</for-each-author>
		<h5><date/></h5>
	</cover>
	
</layout>